
{{>hotelStep confirmation="confirmation"}}


<div id="accordion-color" data-accordion="collapse"
    data-active-classes="bg-blue-100 dark:bg-gray-800 text-blue-600 dark:text-white" class="mt-20 ml-80 rounded-xl">
    {{!-- {{#each hotelconfirmationValues as |hotelOrder|}} --}}
    <h2 id="accordion-color-heading-{{hotelOrder.id}}">
        <button type="button"
            class="items-center w-3/4 p-5 font-medium text-left text-gray-500 border border-b-0 border-gray-200  focus:ring-4 focus:ring-blue-200 dark:focus:ring-blue-800 dark:border-gray-700 dark:text-gray-400 hover:bg-blue-100 dark:hover:bg-gray-800 rounded"
            data-accordion-target="#accordion-color-body-{{hotelOrder.id}}" aria-expanded="true"
            aria-controls="accordion-color-body-{{hotelOrder.id}}">
            <span>Hotel {{hotelconfirmationValues.hotel_name}} in {{hotelconfirmationValues.city}}, {{hotelconfirmationValues.start_date}} -
                {{hotelconfirmationValues.end_date}}</span>
            <span class="me-3 flex inline-flex float-right">
                <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0 ml-7" aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 5 5 1 1 5" />
                </svg>
            </span>
        </button>
    </h2>
    <div id="accordion-color-body-{{hotelOrder.id}}" class="hidden"
        aria-labelledby="accordion-color-heading-{{hotelOrder.id}}">
        <div class="p-5 w-3/4 border border-b-0 border-gray-200 dark:border-gray-700 dark:bg-gray-900 rounded-lg">

            {{!-- {{>hotelBookingDetails}} --}}
            <div class="grid grid-cols-1 gap-x-20">
    <div>
        <h2 class="text-2xl font-bold mb-4">Booking ID: {{hotelconfirmationValues.id}}</h2>
        <div class="col-span-2">
            <div class="p-4 bg-purple-100 rounded-xl text-gray-800">
                <div class="font-bold text-xl text-gray-800 leading-none">Hotel Information:</div>
                <div class="font-bold text-xl leading-none">{{hotelconfirmationValues.hotel_name}}</div>
                <span class="mt-2 font-bold">Location: </span><span>{{hotelconfirmationValues.city}}, {{hotelconfirmationValues.country}}</span>
            </div>
        </div>

        <div class="grid grid-cols-2 gap-4 mt-5">
            <div class="col-span-2">
                <div class="p-4 bg-green-100 rounded-xl">
                    <div class="userPostUpdate d-inline-block">
                        <span class="me-3 flex inline-flex float-right">
                    </div>


                    <div class="font-bold text-xl text-gray-800 leading-none mb-5">Booking Information:</div>
                    <div><span class="mt-5 font-bold text-m">Start Date : </span><span>{{hotelconfirmationValues.start_date}}</span></div>
                    <div><span class="mt-5 font-bold text-m">End Date : </span><span>{{hotelconfirmationValues.end_date}}</span></div>
                    <div><span class="mt-5 font-bold text-m">Number of Adults : </span><span>{{hotelconfirmationValues.num_of_adults}}</span>
                    </div>
                    <div><span class="mt-5 font-bold text-m">Number of Children :
                        </span><span>{{hotelconfirmationValues.num_of_children}}</span></div>
                    <div><span class="mt-5 font-bold text-m">Number of Rooms : </span><span>{{hotelconfirmationValues.num_of_rooms}}</span>
                    </div>
                </div>
            </div>



            <div class="p-4 bg-yellow-100 rounded-xl text-gray-800">
                <div class="font-bold text-xl text-gray-800 leading-none">Guest Information:</div>
                <div><span class="mt-5 font-bold text-m">First Name : </span><span>{{hotelconfirmationValues.first_name}}</span></div>
                <div><span class="mt-5 font-bold text-m">Last Name : </span><span>{{hotelconfirmationValues.last_name}}</span></div>
                <div><span class="mt-5 font-bold text-m">Email : </span><span>{{hotelconfirmationValues.email}}</span></div>
                <div><span class="mt-5 font-bold text-m">Phone Number : </span><span>{{hotelconfirmationValues.phone_number}}</span></div>
            </div>



            <div class="p-4 bg-yellow-100 rounded-xl text-gray-800">
                <div class="font-bold text-xl text-gray-800 leading-none">Payment Information:</div>
                <div><span class="mt-5 font-bold text-m">Card Number : </span><span>{{hotelconfirmationValues.card_number}}</span></div>
                {{!-- <div class="mt-2">{{cvv}}</div> --}}
            </div>
        </div>
    </div>
</div>


        </div>
    </div>
    {{!-- {{/each}} --}}
</div>
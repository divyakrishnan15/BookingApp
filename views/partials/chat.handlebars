<!-- Dropdown menu -->
<div id="dropdownNotification"
    class="z-20 hidden w-full max-w-sm bg-white divide-y divide-gray-100 rounded-lg fixed shadow dark:bg-gray-800 dark:divide-gray-700 shadow-lg max-h-96 overflow-y-scroll relative"
    aria-labelledby="dropdownNotificationButton">
    <div
        class="block px-4 py-2 font-medium text-center text-gray-700 rounded-t-lg bg-gray-200 sticky top-0 dark:bg-gray-800 dark:text-white">
        Chat with Support Agent
    </div>

    <div class="divide-y divide-gray-100 dark:divide-gray-700" id="messageArea">

    </div>

    <form class="inline-flex justify-center items-center mt-5 sticky bottom-0 bg-white w-full" id="form">
        <input class="border border-white hover:border-white focus:border-white rounded p-3 w-11/12" type="text"
            placeholder="Message" id="message">
        <button class="bg-blue-500 rounded-md p-3
                        text-white">
            Send
        </button>
    </form>
</div>

<div class="grid grid-cols-1 gap-x-20">
    <div>
        <h2 class="text-2xl font-bold mb-4">Booking ID: {{id}}</h2>
        <div class="col-span-2">
            <div class="p-4 bg-purple-100 rounded-xl text-gray-800">
                <div class="font-bold text-xl text-gray-800 leading-none mb-5">Hotel Information:</div>
                <div class="flex">
                    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"
                                        src="/assets/{{filename}}" alt="{{filename}}">
                    <div class="font-bold text-2xl leading-none ml-3">{{hotel_name}} </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-2 gap-4 mt-5">
            <div class="col-span-2">
                <div class="p-4 bg-green-100 rounded-xl">
                    <div class="userPostUpdate d-inline-block">
                        <span class="me-3 flex inline-flex float-right">
                    </div>


                    <div class="font-bold text-xl text-gray-800 leading-none mb-5">Booking Information:</div>
                    <div><span class="mt-5 font-bold text-m">Start Date : </span><span>{{start_date}}</span></div>
                    <div><span class="mt-5 font-bold text-m">End Date : </span><span>{{end_date}}</span></div>
                    <div><span class="mt-5 font-bold text-m">Number of Adults : </span><span>{{num_of_adults}}</span>
                    </div>
                    <div><span class="mt-5 font-bold text-m">Number of Children :
                        </span><span>{{num_of_children}}</span></div>
                    <div><span class="mt-5 font-bold text-m">Number of Rooms : </span><span>{{num_of_rooms}}</span>
                    </div>
                </div>
            </div>



            <div class="p-4 bg-yellow-100 rounded-xl text-gray-800">
                <div class="font-bold text-xl text-gray-800 leading-none mb-5">Guest Information:</div>
                {{!-- <div class="font-bold text-2xl leading-none">{{first_name}}</div> --}}
                <div><span class="mt-5 font-bold text-m">Guest First Name : </span><span>{{first_name}}</span></div>
                <div><span class="mt-5 font-bold text-m">Guest Last Name : </span><span>{{last_name}}</span></div>
                <div><span class="mt-5 font-bold text-m">Email : </span><span>{{email}}</span></div>
                <div><span class="mt-5 font-bold text-m">Phone Number : </span><span>{{phone_number}}</span></div>
            </div>



            <div class="p-4 bg-yellow-100 rounded-xl text-gray-800">
                <div class="font-bold text-xl text-gray-800 leading-none">Payment Information:</div>
                <div class="leading-none text-2xl text-cyan-600 font-bold mt-5">card: {{card_number}}</div>
                <div class="mt-2">{{cvv}}</div>
            </div>
        </div>
    </div>
</div>



{{>restaurantStep confirmation="confirmation"}}


<div id="accordion-color" data-accordion="collapse"
    data-active-classes="bg-blue-100 dark:bg-gray-800 text-blue-600 dark:text-white" class="mt-20 ml-80 rounded-xl">
    <h2 id="accordion-color-heading-{{restaurantOrder.id}}">
        <button type="button"
            class="items-center w-3/4 p-5 font-medium text-left text-gray-500 border border-b-0 border-gray-200  focus:ring-4 focus:ring-blue-200 dark:focus:ring-blue-800 dark:border-gray-700 dark:text-gray-400 hover:bg-blue-100 dark:hover:bg-gray-800 rounded"
            data-accordion-target="#accordion-color-body-{{restaurantOrder.id}}" aria-expanded="true"
            aria-controls="accordion-color-body-{{restaurantOrder.id}}">
            <span>Restaurant {{resturantconfirmationValues.restaurant_name}} in {{restaurantconfirmationValues.city}}, {{restaurantconfirmationValues.date}} </span>
            <span class="me-3 flex inline-flex float-right">
                <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0 ml-7" aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 5 5 1 1 5" />
                </svg>
            </span>
        </button>
    </h2>
    <div id="accordion-color-body-{{hotelOrder.id}}" class="hidden"
        aria-labelledby="accordion-color-heading-{{hotelOrder.id}}">
        <div class="p-5 w-3/4 border border-b-0 border-gray-200 dark:border-gray-700 dark:bg-gray-900 rounded-lg">

            <div class="grid grid-cols-1 gap-x-20">
    <div>
        <h2 class="text-2xl font-bold mb-4">Booking ID: {{restaurantconfirmationValues.id}}</h2>
        <div class="col-span-2">
            <div class="p-4 bg-purple-100 rounded-xl text-gray-800">
                <div class="font-bold text-xl text-gray-800 leading-none">Restaurant Information:</div>
                <div class="font-bold text-xl leading-none">{{restaurantconfirmationValues.restaurant_name}}</div>
                <span class="mt-2 font-bold">Location: </span><span>{{restaurantconfirmationValues.city}}</span>
            </div>
        </div>

        <div class="grid grid-cols-2 gap-4 mt-5">
            <div class="col-span-2">
                <div class="p-4 bg-green-100 rounded-xl">
                    <div class="userPostUpdate d-inline-block">
                        <span class="me-3 flex inline-flex float-right">
                    </div>

                    <div class="font-bold text-xl text-gray-800 leading-none mb-5">Booking Information:</div>
                    <div><span class="mt-5 font-bold text-m">Booked Date : </span><span>{{restaurantconfirmationValues.date}}</span></div>
                    <div><span class="mt-5 font-bold text-m">Number of Guests : </span><span>{{restaurantconfirmationValues.num_of_guests}}</span></div>

                </div>
            </div>

            <div class="p-4 bg-yellow-100 rounded-xl text-gray-800">
                <div class="font-bold text-xl text-gray-800 leading-none">Guest Information:</div>
                <div class="font-bold text-2xl leading-none">{{restaurantconfirmationValues.first_name}}</div>
                <div class="font-bold text-2xl leading-none">{{restaurantconfirmationValues.last_name}}</div>
                <div class="font-bold text-2xl leading-none">{{restaurantconfirmationValues.email}}</div>
                <div class="font-bold text-2xl leading-none">{{restaurantconfirmationValues.phone_number}}</div>
            </div>

        </div>
    </div>
</div>
       